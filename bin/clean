#!/usr/bin/env python3
# This file is placed in the Public Domain.
# pylint: disable=C,I,R,W0105


"clean directories"


import os
import sys


"defines"


SKIP = ["env", ".git"]


"utilities"

def loop(path, txt):
    old = os.getcwd()
    os.chdir(path)
    for fnn in os.listdir(path):
        if fnn in SKIP:
            continue
        old = os.getcwd()
        fpath = os.path.abspath(os.path.join(path, fnn))
        if os.path.isdir(fpath):
            loop(fpath, txt)
        if not os.path.isdir(fpath):
            continue
        os.chdir(fpath)
        popen(txt)
        os.chdir(old)
    os.chdir(old)


def popen(txt):
    for line in os.popen(txt).readlines():
        print(line.rstrip())
        sys.stdout.flush()


"runtime"


def main():
    popen("rm -fR DEAD* build dist MANIFEST *.egg-info *.whl")
    popen("rm -fR .pytest_cache .test __pycache__ .ruff_cache")
    popen("rm -fR .*~ *~")
    popen("rm -fR store .venv uv.lock")
    loop(".", "rm -fR *~")
    loop(".", "rm -fR __pycache__")


if __name__ == "__main__":
    main()
